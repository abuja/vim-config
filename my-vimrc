execute pathogen#infect()
syntax on
set nu
set expandtab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set autoindent
set directory=$HOME/.vim/tmp/
set incsearch

let g:netrw_list_hide='.*\.pyc$,__pycache__,.git'

autocmd filetype yaml setlocal shiftwidth=2 softtabstop=2 tabstop=2
autocmd filetype terraform setlocal shiftwidth=2 softtabstop=2 tabstop=2
autocmd filetype python setlocal cc=80
autocmd bufenter Jenkinsfile set syntax=groovy
